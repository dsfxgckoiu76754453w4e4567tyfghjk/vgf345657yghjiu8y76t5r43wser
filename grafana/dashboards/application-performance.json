{
  "dashboard": {
    "title": "Application Performance & Business Metrics",
    "tags": ["fastapi", "performance", "llm", "business", "shia-chatbot"],
    "timezone": "browser",
    "refresh": "30s",
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "HTTP Request Rate",
        "type": "graph",
        "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{environment=\"$environment\"}[5m])) by (method, endpoint)",
            "legendFormat": "{{method}} {{endpoint}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Requests/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 2,
        "title": "HTTP Response Time (p95)",
        "type": "graph",
        "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{environment=\"$environment\"}[5m])) by (le, endpoint))",
            "legendFormat": "{{endpoint}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Response Time"},
          {"format": "short"}
        ]
      },
      {
        "id": 3,
        "title": "HTTP Error Rate (4xx/5xx)",
        "type": "graph",
        "gridPos": {"x": 0, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{environment=\"$environment\",status_code=~\"4..|5..\"}[5m])) by (status_code)",
            "legendFormat": "{{status_code}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Errors/sec"},
          {"format": "short"}
        ],
        "alert": {
          "name": "High Error Rate",
          "conditions": [
            {
              "evaluator": {"type": "gt", "params": [1]},
              "query": {"params": ["A", "5m", "now"]}
            }
          ]
        }
      },
      {
        "id": 4,
        "title": "Active Requests",
        "type": "graph",
        "gridPos": {"x": 12, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "http_requests_in_progress{environment=\"$environment\"}",
            "legendFormat": "{{method}} {{endpoint}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Active Requests"},
          {"format": "short"}
        ]
      },
      {
        "id": 5,
        "title": "LLM Token Usage (Last 24h)",
        "type": "graph",
        "gridPos": {"x": 0, "y": 16, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(llm_tokens_used_total{environment=\"$environment\"}[1h])) by (provider, model, type)",
            "legendFormat": "{{provider}}/{{model}} ({{type}})",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Tokens/hour"},
          {"format": "short"}
        ]
      },
      {
        "id": 6,
        "title": "LLM Cost (USD)",
        "type": "stat",
        "gridPos": {"x": 12, "y": 16, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "sum(increase(llm_cost_usd_total{environment=\"$environment\"}[24h]))",
            "refId": "A"
          }
        ],
        "options": {
          "textMode": "value_and_name",
          "colorMode": "value",
          "graphMode": "area"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "decimals": 2,
            "thresholds": {
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 50, "color": "yellow"},
                {"value": 100, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 7,
        "title": "LLM Cache Hit Rate",
        "type": "gauge",
        "gridPos": {"x": 18, "y": 16, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "sum(rate(llm_cache_hits_total{environment=\"$environment\"}[5m])) / sum(rate(llm_requests_total{environment=\"$environment\"}[5m])) * 100",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 30, "color": "yellow"},
                {"value": 60, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 8,
        "title": "LLM Request Duration (p95)",
        "type": "graph",
        "gridPos": {"x": 12, "y": 20, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(llm_request_duration_seconds_bucket{environment=\"$environment\"}[5m])) by (le, provider, model))",
            "legendFormat": "{{provider}}/{{model}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Duration"},
          {"format": "short"}
        ]
      },
      {
        "id": 9,
        "title": "Database Connections",
        "type": "graph",
        "gridPos": {"x": 0, "y": 24, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "db_connections_active{environment=\"$environment\"}",
            "legendFormat": "Active",
            "refId": "A"
          },
          {
            "expr": "db_connections_idle{environment=\"$environment\"}",
            "legendFormat": "Idle",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Connections"},
          {"format": "short"}
        ]
      },
      {
        "id": 10,
        "title": "Database Query Duration (p95)",
        "type": "graph",
        "gridPos": {"x": 12, "y": 24, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(db_query_duration_seconds_bucket{environment=\"$environment\"}[5m])) by (le, operation, table))",
            "legendFormat": "{{operation}} {{table}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Query Duration"},
          {"format": "short"}
        ]
      },
      {
        "id": 11,
        "title": "Active Users by Plan",
        "type": "stat",
        "gridPos": {"x": 0, "y": 32, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "sum(users_active{environment=\"$environment\"}) by (plan)",
            "legendFormat": "{{plan}}",
            "refId": "A"
          }
        ],
        "options": {
          "textMode": "value_and_name",
          "colorMode": "value"
        }
      },
      {
        "id": 12,
        "title": "Active Conversations",
        "type": "stat",
        "gridPos": {"x": 6, "y": 32, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "conversations_active{environment=\"$environment\"}",
            "refId": "A"
          }
        ],
        "options": {
          "textMode": "value_and_name",
          "colorMode": "value"
        }
      },
      {
        "id": 13,
        "title": "Messages Sent (24h)",
        "type": "stat",
        "gridPos": {"x": 12, "y": 32, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "sum(increase(messages_sent_total{environment=\"$environment\"}[24h]))",
            "refId": "A"
          }
        ],
        "options": {
          "textMode": "value_and_name",
          "colorMode": "value"
        }
      },
      {
        "id": 14,
        "title": "Images Generated (24h)",
        "type": "stat",
        "gridPos": {"x": 18, "y": 32, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "sum(increase(images_generated_total{environment=\"$environment\"}[24h]))",
            "refId": "A"
          }
        ],
        "options": {
          "textMode": "value_and_name",
          "colorMode": "value"
        }
      },
      {
        "id": 15,
        "title": "Storage Usage by User Plan",
        "type": "graph",
        "gridPos": {"x": 0, "y": 36, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(storage_quota_used_bytes{environment=\"$environment\"}) by (plan)",
            "legendFormat": "{{plan}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "bytes", "label": "Storage Used"},
          {"format": "short"}
        ]
      },
      {
        "id": 16,
        "title": "Rate Limit Exceeded Events",
        "type": "graph",
        "gridPos": {"x": 12, "y": 36, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(rate_limit_exceeded_total{environment=\"$environment\"}[5m])",
            "legendFormat": "{{endpoint}} ({{plan}})",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Rate Limits/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 17,
        "title": "Top Error Types",
        "type": "table",
        "gridPos": {"x": 0, "y": 44, "w": 24, "h": 8},
        "targets": [
          {
            "expr": "topk(10, sum(increase(errors_total{environment=\"$environment\"}[1h])) by (error_type, component))",
            "format": "table",
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "renameByName": {
                "error_type": "Error Type",
                "component": "Component",
                "Value": "Count (Last Hour)"
              }
            }
          }
        ]
      }
    ],
    "templating": {
      "list": [
        {
          "name": "environment",
          "type": "query",
          "query": "label_values(http_requests_total, environment)",
          "current": {"text": "prod", "value": "prod"},
          "options": [],
          "refresh": 1
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "Deployments",
          "datasource": "Prometheus",
          "expr": "changes(app_info{environment=\"$environment\"}[1m]) > 0",
          "tagKeys": "version",
          "textFormat": "Deployment: {{version}}"
        }
      ]
    }
  }
}
